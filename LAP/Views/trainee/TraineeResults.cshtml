@model All_Trainee_results_viewModel
@{
    ViewData["Title"] = "TraineeResults";
}

<style>
    .navbar, footer {
        display: none !important;
    }

    .container {
        max-width: 1200px; 
        padding: 20px;
    }

    .card {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: -3px 8px 8px rgb(0 0 0 / 11%);
        margin-bottom: 20px;
    }

    .card-title {
        font-size: 16px;
        font-weight: bold;
        color: #333333;
    }

    .list-group-item span {
        font-weight: bold;
    }

    .list-group-item {
        font-size: 18px;
        color: #666666;
    }

    .card-body {
        overflow: hidden; 
    }

    .card-img-top {
        width: 100%;
        max-height: 200px; 
        object-fit: cover; 
    }

    

</style>

<div class="container">
    <div class="text-center display-4 fw-bold mb-5">@Model.TraineeName </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var course in Model.Courses)
        {
            <div class="col">
                <div class="card">
                    <img src="/Imgs/@course.Image" class="card-img-top w-25" alt="Course Image">
                    <div class="card-body">
                        <p class="card-title">@course.CourseName</p>
                        <ul class="list-group list-group-flush" style="color: @course.Color;">
                            <li class="list-group-item" style="color:@course.Color"><span>Course Min Degree:</span> @course.CourseMinDegree</li>
                            <li class="list-group-item" style="color:@course.Color"><span>Trainee Degree:</span> @course.TraineeDegree</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="card-body">
        <a href="/trainee/Index" class="btn btn-outline-dark">Back to Main Page</a>
    </div>
</div>