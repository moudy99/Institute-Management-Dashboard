@model Course
@{
    ViewData["Title"] = "Edit";
    SelectList departments = new SelectList(ViewBag.Departments, "ID", "Name");

}

<style>

    form {
        margin-top: 20px;
        box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px, rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.1) 0px 16px 56px;
        padding: 20px
    }

    .navbar, footer {
        display: none;
    }

    span {
        color: red;
    }

    body {
        margin: 0;
    }

    main {
        display: flex;
        align-items: center;
        justify-content: center;
        max-height: 100vh;
        overflow: hidden;
    }


    .btn {
        color: #fff;
        background-color: #7f7fd5;
        font-size: 20px;
        font-weight: bold;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            background-color: #5454a3;
            color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            transform: translateY(-3px);
        }
        
</style>

<form style="width: 30rem;" method="post" action="/course/SaveEdite">

    <input type="hidden" name="Id" class="trainee-id" value="@Model.ID" />

    <!-- Name input -->
    <div class="form-outline mb-4">
        <label asp-for="Name">Name</label>
        <input required class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <!-- Degree input -->
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Degree">Degree</label>
        <input required class="form-control" asp-for="Degree" />
        <span asp-validation-for="Degree"></span>
    </div>

    <!-- Min Degree input -->
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="MinDegree">Min Degree</label>
        <input required class="form-control" asp-for="MinDegree" />
        <span asp-validation-for="MinDegree"></span>
    </div>

    <!-- Hours input -->
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="CrsHours">Course Hours</label>
        <input required class="form-control" asp-for="CrsHours" />
        <span asp-validation-for="CrsHours"></span>
    </div>

    <!-- Department dropdown -->
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="DepartmentId">Department</label>
        <select required class="form-select" asp-for="DepartmentId" asp-items="@ViewBag.Departments">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="DepartmentId"></span>
    </div>

    <!-- Submit button -->
    <button data-mdb-ripple-init type="submit" class="display-1 btn  mb-4">Save Edit</button>
</form>

<partial name="_ValidationScriptsPartial" />